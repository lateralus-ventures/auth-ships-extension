<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1.0.0-ships" author="lateralus">
        <createTable tableName="ship">
            <column name="id" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="imo" type="VARCHAR(20)"/>
            <column name="type" type="VARCHAR(50)"/>
            <column name="organization_id" type="VARCHAR(36)"/>
            <column name="realm_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="ship_equipment" type="TEXT"/>
            <column name="crew_ai_mode" type="VARCHAR(20)"/>
            <column name="created_at" type="BIGINT"/>
            <column name="updated_at" type="BIGINT"/>
        </createTable>
        
        <createTable tableName="user_ship">
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="ship_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="assigned_at" type="BIGINT"/>
        </createTable>
        
        <addPrimaryKey tableName="user_ship" columnNames="user_id,ship_id"/>
        
        <createIndex tableName="ship" indexName="idx_ship_realm">
            <column name="realm_id"/>
        </createIndex>
        
        <createIndex tableName="ship" indexName="idx_ship_org">
            <column name="organization_id"/>
        </createIndex>
        
        <createIndex tableName="user_ship" indexName="idx_user_ship_user">
            <column name="user_id"/>
        </createIndex>
        
        <createIndex tableName="user_ship" indexName="idx_user_ship_ship">
            <column name="ship_id"/>
        </createIndex>
    </changeSet>
    
    <changeSet id="1.0.1-ships-external-id" author="lateralus">
        <addColumn tableName="ship">
            <column name="external_id" type="VARCHAR(24)"/>
        </addColumn>
        
        <createIndex tableName="ship" indexName="idx_ship_external_id" unique="true">
            <column name="external_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>